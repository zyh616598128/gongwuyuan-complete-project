<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- 课程封面 -->
        <ImageView
            android:id="@+id/iv_course_cover"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_course_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/chip_background" />

        <!-- 课程信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="行政职业能力测验精讲班"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_course_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="系统讲解行测五大模块，掌握核心解题技巧"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_course_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24课时"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    android:drawableStart="@drawable/ic_timer"
                    android:drawablePadding="4dp" />

                <TextView
                    android:id="@+id/tv_course_lessons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  |  12讲"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    android:layout_marginStart="8dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_course_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥199"
                    android:textSize="14sp"
                    android:textColor="@color/error"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 课程标签 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_course_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频课"
                    android:textSize="10sp"
                    app:chipBackgroundColor="@color/secondary"
                    app:chipCornerRadius="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李老师"
                    android:textSize="10sp"
                    android:layout_marginStart="8dp"
                    app:chipBackgroundColor="@color/info"
                    app:chipCornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>