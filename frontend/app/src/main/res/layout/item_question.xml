<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 题目内容区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tv_question_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下列选项中，哪一项不属于我国《宪法》规定的基本权利？"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:lineSpacingMultiplier="1.2" />

        </LinearLayout>

        <!-- 题目标签行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_question_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单选题"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/secondary"
                app:chipCornerRadius="8dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中等"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                app:chipBackgroundColor="@color/accent"
                app:chipCornerRadius="8dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_answer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未答"
                android:textSize="12sp"
                android:textColor="@color/warning"
                android:background="@drawable/chip_background"
                android:padding="4dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- 题目统计信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_correct_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正确率: 78%"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法律常识"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- 操作按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_do_now"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="立即练习"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查看详情"
                android:layout_marginStart="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>